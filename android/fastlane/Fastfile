default_platform(:android)

platform :android do
  desc "Android Production Build and Deploy to Play Store Production"
  lane :deploy_new_version do
    gradle(task: 'clean')
    gradle(
      task: 'bundle',
      build_type: 'Release',
      properties: {
        "android.injected.signing.store.file" => File.absolute_path('../keystore.jks', __dir__),
        "android.injected.signing.store.password" => ENV['KEYSTORE_PASSWORD'],
        "android.injected.signing.key.alias" => ENV['KEY_ALIAS'],
        "android.injected.signing.key.password" => ENV['KEY_PASSWORD'],
    }
  )

  firebase_app_distribution(
    app: ENV['FIREBASE_ANDROID_APP_ID'],
    firebase_cli_token: ENV['FIREBASE_TOKEN'],
    groups: 'testers',
    android_artifact_type: "AAB",
    android_artifact_path: File.absolute_path('../app/build/outputs/bundle/release/app-release.aab'),
  )
  
  upload_to_play_store(
    track: 'internal',
    release_status: 'completed',
    skip_upload_apk: true,
    aab: File.absolute_path('../app/build/outputs/bundle/release/app-release.aab'),
  )
  end
end
